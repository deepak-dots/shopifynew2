$primary: #fff;
$red: #666;
$beige: #ccc;
$green-hover: green;
$red-hover: red;

.fancybox-outer {
  background-color: $primary;
  padding: 0;
}

#quick-view {
  display: flex;
  height: 100%;
  justify-content: flex-end;
  flex-wrap: wrap;
  position: relative;
  -ms-overflow-style: -ms-autohiding-scrollbar;
  .qv-product-images {
    width: 49%;
    height: auto;
    display: inline-block;
    position: absolute;
    margin: 0 auto;
    left: 30px;
    top: 0;
    height: 100%;
  }
  .slick-list, .slick-track {
    height: calc(100% - 12px);
  }
  .slick-initialized .slick-slide {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .slick-slide {
    padding: 0 50px;
    height: 100%;
    position: relative;
    img {
      margin: 0 auto;
      max-height: 100%;
      position: absolute;
      top: 50%;
      left: 50%;
      width: auto;
      height: auto;
      -webkit-transform: translate(-50%,-50%);
      transform: translate(-50%,-50%);
    }
  }
  .slick-dots {
    right: auto;
    left: 50%;
    bottom: 10px;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    display:none!important;
    li {
      margin: 0 8px 0 0;
      button {
        background-color: #cacaca;
        width: 12px;
        height: 12px;
        outline: none;
      }
      &.slick-active button {
        background-color: $primary;
      }
    }
  }
  .qv-content {
    width: 45%;
    margin-right: 15px;
    display: inline-flex;
    float: right;
    flex-direction: row;
    justify-content: space-between;
    height: calc(100% - 40px);
    -webkit-transform: translateY(20px);
    transform: translateY(20px);
    flex-wrap: wrap;
    box-sizing: border-box;
    > * {
      width: calc(100% - 25px);
      box-sizing: border-box;
    }
  }
  .qv-product-title {
    font-size:24px;
    padding-right: 20px;
    margin-bottom: 0;
    // color: #5a3214;
  }
  .qv-product-type {
    // color: #a18466;
  }
  .qv-product-price, .qv-product-original-price {
    display: inline-block;
    // color: #5a3214;
    font-size: 20px;
    margin-bottom: 0;
  }
  .qv-product-original-price {
    margin-left: 8px;
    text-decoration: line-through;
    // color: lighten(#5a5a5a, 30%);
  }
  .option-selection-title {
    display: none;
  }
  hr {
    border-top: 1px solid $beige;
    margin: 15px 0 20px;
  }
  .quantity {
    margin-bottom: 25px;
    span {
      //@include font-size(1.4);
      display: inline-block;
      min-width: 100px;
    }
    input[type="number"]{
      width: 60px;
      text-align: center;
      //@include font-size(1.4);
      -moz-appearance: textfield;
      margin-left: -4px;
      padding: 4px;
      border: 1px solid #d3d3d3;
      display:inline-block;
      &:focus {
        outline: none;
        border: 1px solid $red;
        display: inline-block;
      }
    }
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  }
  .qv-product-options {
    > div {
      margin-bottom: 8px;
    }
    span {
      //@include font-size(1.4);
      text-transform: lowercase;
      display: inline-block;
      min-width: 100px;
    }
  }
  .qv-add-button {
    display: block;
    //background-color: #fff;
    border-radius:0;
    text-transform: uppercase;
    letter-spacing: .1em;
    text-align: center;
    padding: 10px 20px;
    border: 0;
    width: 100%;
    // color: #5a3214;
    // border:solid 1px #5a3214;
    &:hover {
      // background-color: #5a3214;
      // color:#ffffff;
    }
    &:focus {
      // background-color: #5a3214;
      // color:#ffffff;
      outline: none;
    }
    &:disabled {
      // background-color: #ccc;
    }
  }
  .qv-add-to-cart-response {
   // @include font-size(1.4);
    margin-top: 20px;
    display: none;
    &.success, &.error {
      display: block;
      padding: 8px;
      border: 1px solid;
    }
    &.success {
      border-color: $green-hover;
      color: $green-hover;
      a {
        color: #000;
        text-decoration: underline;
        display:block;
      }
    }
    &.error {
      border-color: $red-hover;
      color: $red-hover;
    }
  }
  .qv-product-description {
    padding: 20px 0 30px;
    //@include font-size(1.45);
  }
  .view-product {
    display: inline-block;
    text-transform: uppercase;
   // @include font-size(1.2);
    letter-spacing: .05em;
    span {
      color: #5a3214;
      border-bottom: 2px solid #5a3214;
    }
  }
  @media (max-width: 1200px){
    .qv-product-images, .qv-content {
      width: 50%;
    }
    .qv-content {
      padding-left: 60px;
    }
    .slick-slide {
      padding: 0;
    }
  }
  @media (max-width: 900px){
    display: block;
    height: calc(100% - 40px);
    -webkit-transform: translateY(20px);
    transform: translateY(20px);
    .qv-product-images {
      top: 0;
      left: 0;
      height: 50%;
      max-height: 350px;
      position: relative;
      width: 100%;
    }
    .slick-slide {
      position: relative;
      img {
        max-height: 300px;
        margin: 0 auto;
        position: relative;
        top: auto;
        left: auto;
        -webkit-transform: none;
        transform: none;
        height: 100%;
        width: auto;
      }
    }
    .slick-dots {
      bottom: 0;
    }
    .qv-content {
      width: 100%;
      height: auto;
      padding: 0 10px 10px 30px;
      overflow: auto;
      -webkit-transform: none;
      transform: none;
    }
    .slick-initialized .slick-slide {
      display: block;
      text-align: center;
    }
    .slick-slide img {
      width: auto;
      display: inline-block;
      max-width: 300px;
    }
  }
}


{%- if product.media.size > 1 -%}
  <div class="pdp-video-panel-main d-block clearfix">
    <div class="container">
        <div class="row no-gutters justify-content-center">
          <div class="col-md-6 col-lg-4 col-sm-12 text-center">
          {%- for media in product.media -%}
            {%- case media.media_type -%}
              {%- when 'video' -%} 
              <div class="pdp-video-panel d-block clearfix">
                {%comment%} {{ media | video_tag: controls: false, image_size: "720x", scale: 2 }}{%endcomment%}
                {{ media | video_tag: controls: false, autoplay:true, muted:true, loop:true }}
              </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
   </div>
{%- endif -%}
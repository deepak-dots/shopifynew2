<div class="content-page clearfix">
<div class="container">
<h1 class="h1">{{ page.title }}</h1>
<div class="img-container clearfix">
  {%- if section.settings.vip_image != blank -%}
    <img src="{{ section.settings.vip_image | img_url : 'master' }}" alt="Store">
  {%- else -%}
    <img src="{{ 'dummy-img.jpg' | asset_url }}" alt="img">
  {%- endif -%}
</div>
<div class="rte">
  {{ page.content }}
</div>
<div class="vip-form clearfix">
  
  <!-- Begin Mailchimp Signup Form -->

{% section 'request-form' %}
{%comment%}
<style type="text/css">
  label.classic-label{display: none !important;}
  h3.title{text-align: center;}
.globo-form-app .content + p {display: none;}
</style>
<div class="content-block d-block clearfix">
  <div class="request-page">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-9 col-lg-8 col-xl-7 m-auto">
        <div class="request-bnr-block">
          <div class="row align-items-center">
            <div class="col-12 order-2 col-sm-12 order-sm-2 col-md-5 order-md-1">
             <div class="img-block">
               <img src="{{"request-form-bnr-img.jpg" | asset_url }}" alt="img">
             </div>
            </div>
            <div class="col-12 order-1 col-sm-12 order-sm-1 col-md-7 order-md-2">

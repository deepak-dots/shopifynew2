{% if template.name == "index" %}
<script>
	setTimeout(loadStyleSheet("{{ 'slvr-quick-view.css' | asset_url }}"),1000);
	setTimeout(loadStyleSheet("{{ 'slvr-jquery.fancybox.css' | asset_url }}"),1000);
</script>
<script src="{{ 'option_selection.js' | asset_url }}" async></script>
{% else %}
<link rel="stylesheet" href="{{ 'slvr-quick-view.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'slvr-jquery.fancybox.css' | asset_url }}">
{{ "option_selection.js" | shopify_asset_url | script_tag }}
{% endif %}
{%- comment -%}
enable_mobile=!0 to !1
{%- endcomment -%}

  <style>
  
  </style>
  
  <!-- HIDDEN --><div style="display:block;">
  <form class="formBuilder vip-registration-form" name="form" method="POST" target="_blank" action="https://forms.sign-up.to/28913/7064">
    <div class="formBuilderBucket clearfix">
      {% comment %}
      <div class="formBuilderGroup groupHTML ">
        <h1>JOIN THE VIP LIST</h1>
      </div>
      <div class="formBuilderGroup groupHTML ">
        <p>Please enter your details to join the Suzannah VIP mailing list.<br>
          <br>
          When appropriate, we will send you update emails informing you of forthcoming promotions, special discounts and new collections.<br>
          <br>
          All information is kept confidential.
        </p>
      </div>

      
      <div class="formBuilderGroup groupCoreProfile ">
        <label class="formBuilderLabel" for="title">Title <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderInputContainer">
          <input type="text" name="title" class="form-control" id="title" placeholder="" value="">
        </div>
      </div>
      <div class="formBuilderGroup groupCoreProfile ">
        <label class="formBuilderLabel" for="first_name">First name <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderInputContainer">
          <input type="text" name="first_name" class="form-control" id="first_name" placeholder="" value="">
        </div>
      </div>
      <div class="formBuilderGroup groupCoreProfile ">
        <label class="formBuilderLabel" for="surname">Surname <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderInputContainer">
          <input type="text" name="surname" class="form-control" id="surname" placeholder="" value="">
        </div>
      </div>
      <div class="formBuilderGroup groupCoreProfile ">
        <label class="formBuilderLabel" for="mobile">Mobile <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderInputContainer">
          <input type="text" name="mobile" class="form-control" id="mobile" placeholder="" value="">
        </div>
      </div>
      <div class="formBuilderGroup groupCoreProfile ">
        <label class="formBuilderLabel" for="postcode">Postcode / zip <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderInputContainer">
          <input type="text" name="postcode" class="form-control" id="postcode" placeholder="" value="">
        </div>
      </div>
      {% endcomment %}
      <div class="formBuilderGroup groupCoreProfile " compulsory="">
        <!-- <label class="formBuilderLabel" for="email">Email <span class="formBuilderRequired">*</span></label> -->

        <div class="formBuilderInputContainer">
          <input type="email" name="email" class="form-control" id="email" placeholder="Email Address" value="">
        </div>
      </div>
      {% comment %}
      <div class="formBuilderGroup groupSubscriberProfile ">
        <label class="formBuilderLabel" for="profile_1298">Dress size <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderSelectContainer">
          <select name="profile_1298" class="pretty form-control" id="profile_1298">
            <option value="none">Please select...</option>
            <option value="8">8</option>
            <option value="10">10</option>
            <option value="12">12</option>
            <option value="14">14</option>
            <option value="16">16</option>
          </select>
        </div>
      </div>
      <div class="formBuilderGroup groupSubscriberProfile ">
        <label class="formBuilderLabel" for="profile_1299">Source <span class="formBuilderRequired">*</span></label>

        <div class="formBuilderSelectContainer">
          <select name="profile_1299" class="pretty form-control" id="profile_1299">
            <option value="none">Please select...</option>
            <option value="Press">Press</option>
            <option value="Customer">Customer</option>
            <option value="Other">Other</option>
          </select>
        </div>
        {% endcomment %}
      </div>
      <div class="formBuilderGroup groupSubmit ">
        <button name="subscribe" class="btn btn-border" type="submit">Submit</button>
      </div>
    </div>
  </form>
  </div><!-- HIDDEN -->
</div>
</div>
</div>
{% schema %}
{
  "name": {
    "en": "VIP Registration"
  },
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "vip_image",
      "label": {
        "en": "Display Image"
      }
    }
  ]
}
{% endschema %}

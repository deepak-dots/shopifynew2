$miniscreen: 'miniscreen';
$widescreen: 'widescreen';
$extra-large: 'extra-large';
$xxl-large: 'xxl-large';

// The `$breakpoints` list is used to build our media queries.
// You can use these in the media-query mixin.
$breakpoints: (
  $extra-small '(max-width: #{$grid-extra-small})',
  $small-mobile '(max-width: #{$grid-small-screen})',
  $medium-small '(max-width: #{$grid-medium-small})',
  $small '(max-width: #{$grid-medium - 1})',
  $medium '(min-width: #{$grid-medium}) and (max-width: #{$grid-large - 1})',
  $medium-down '(max-width: #{$grid-large - 1})',
  $medium-up '(min-width: #{$grid-medium})',
  $large '(min-width: #{$grid-large}) and (max-width: #{$grid-widescreen - 1})',
  $large-down '(max-width: #{$grid-widescreen - 1})',
  $large-up '(min-width: #{$grid-large})',
  $small-desk-down '(max-width: #{$grid-small-desktop - 1})',
  $smalldesktop '(max-width: #{$grid-small-desktop})',
  $miniscreen-down '(max-width: #{$grid-miniscreen - 1})',
  $miniscreen '(max-width: #{$grid-miniscreen})',
  $widescreen '(max-width: #{$grid-widescreen})',
  $extra-large '(max-width: #{$grid-extra-large})',
  $xxl-large '(max-width: #{$grid-xxl-large})'
);

/*============================================================================
  Generate breakpoint-specific column widths and push classes
    - Default column widths: $breakpoint-has-widths: ($small, $medium-up);
    - Default is no push classes
    - Will not work if `styles/global/grid.scss` is removed
==============================================================================*/
$breakpoint-has-widths: ($xxl-large, $extra-large, $miniscreen, $smalldesktop, $small-desk-down, $medium-down, $medium-up, $small, $medium-small, $extra-small);
$breakpoint-has-push: ($small, $medium-up);

